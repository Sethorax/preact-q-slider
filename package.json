{
  "name": "preact-q-slider",
  "version": "0.1.20",
  "main": "./dist/preact-q-slider.js",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "preact": "^8.2.7",
    "preact-html-converter": "^0.3.3",
    "unistore": "^3.0.4"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.11",
    "jest": "^22.4.3",
    "microbundle": "^0.4.4",
    "mini-css-extract-plugin": "^0.2.0",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.1.3",
    "preact-render-spy": "^1.2.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1",
    "webpack-node-externals": "^1.6.0"
  },
  "scripts": {
    "watch": "webpack-dev-server --content-base build --env=dev",
    "cleanup": "rimraf ./tmp && rimraf ./dist/__tmp.js",
    "build:pre": "BABEL_ENV=production babel ./src --out-dir ./tmp",
    "build:main": "microbundle tmp/index.js -o dist/preact-q-slider.js -f cjs --external all --sourcemap false",
    "build:stylesheet": "webpack -p --env=production --config=webpack.config.dist.js",
    "build": "npm run build:pre && npm run build:main && npm run build:stylesheet && npm run cleanup",
    "test": "jest",
    "prepublish": "npm run build"
  },
  "jest": {
    "moduleNameMapper": {
      "unistore/preact": "<rootDir>/test/mocks/connect-mock.js"
    }
  }
}
